<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- <link rel="stylesheet" href="css/style.css"> -->
        <link rel="stylesheet" href="css/style2.css">
        <link rel="shortcut icon" href="pics/favicon-32x32.png" type="image/x-icon">
        <title>Sardaria Tours & Travel</title>
    </head>
    <body style="overflow: hidden;" class="login-body">
        <div style="margin-left: 50px;" class="logo-container">
            <div class="specialdiv">
                <li>
                    <div class="logo-holder logo-4">
                        <a href="">
                            <h3 style="text-shadow: 1px 1px gray; color: black">Sardaria</h3>
                            <p style="color: gray;">Tours & Travels</p>
                        </a>
                    </div>
                </li>
            </div>
        </div>
        <div style="background-color: white; height: 100vw;">
            <div class="cont">
                <form action="/login" method="post">
                    <div class="form sign-in">
                        <h2>Welcome back,</h2>
                        <label>
                            <span>Email</span>
                            <input name="loginEmail" type="email">
                        </label>
                        <label>
                            <span>Password</span>
                            <input name="loginPass" type="password">
                        </label>
                        <p class="forgot-pass">Forgot password?</p>
                        <button type="submit" class="submit">Sign In</button>
                    </div>
                </form>
                <div class="sub-cont">
                    <div class="img">
                        <div class="img__text m--up">
                            <h2>New here?</h2>
                            <p>Sign up and discover great amount of new offers on flight!</p>
                        </div>
                        <div class="img__text m--in">
                            <h2>One of us?</h2>
                            <p>If you already have an account, just sign in. We've missed you!</p>
                        </div>
                        <div class="img__btn">
                            <span class="m--up">Sign Up</span>
                            <span class="m--in">Sign In</span>
                        </div>
                    </div>
                    <form action="/signup" method="post">
                        <div class="form sign-up">
                            <h2>Time to feel like home,</h2>
                            <label>
                                <span>First Name</span>
                                <input name="signupfName" type="text">
                            </label>
                            <label>
                                <span>Last Name</span>
                                <input name="signuplName" type="text">
                            </label>
                            <label>
                                <span>Email</span>
                                <input name="signupEmail" type="email">
                            </label>
                            <label>
                                <span>Password</span>
                                <input name="signupPass" type="password">
                            </label>
                            <button type="submit" class="submit">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="js/login.js"></script>
    </body>
</html>
